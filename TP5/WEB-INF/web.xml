<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="M4201C" version="2.5">

    <display-name>dir</display-name>

    <description>Cours M4102C - Fran√ßois MERCIOL</description>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>ServletAction</servlet-name>
        <servlet-class>com.iut.servlets.Dir</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletAction</servlet-name>
        <url-pattern>/dir</url-pattern>
    </servlet-mapping>
    <servlet>

    <servlet-name>ServletImage</servlet-name>
    <servlet-class>com.iut.servlets.FileLoad</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>ServletImage</servlet-name>
<url-pattern>/file</url-pattern>
</servlet-mapping>

    <servlet>
        <servlet-name>ServletDate</servlet-name>
        <servlet-class>com.iut.servlets.Date</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletDate</servlet-name>
        <url-pattern>/date</url-pattern>
    </servlet-mapping>

</web-app>